{
  "mcpServers": {
    "spring-ai-mcp": {
      "command": "/opt/homebrew/opt/openjdk/bin/java",
      "args": [
        "-jar",
        "/Users/bruno/work/projects/java/spring-ai/spring-ai-training/mcp-server/target/mcp-server-1.0-SNAPSHOT.jar"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/bruno/work/projects/java/spring-ai/mcp"
      ]
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
